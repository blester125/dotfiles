# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "ipv6"
order += "disk /"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "battery 1"
#order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "Battery 0: %status %percentage %remaining"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "ðŸ”‹"
        low_threshold = 10
}
battery 1 {
        format = "Battry 1: %status %percentage %remaining"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "ðŸ”‹"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        #pidfile = "/var/run/vpnc/pid"
        pidfile = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default" #"alsa_output.pci-0000_00_1b.0.analog-stereo"
        mixer = "Master"
        mixer_idx = 0
}
