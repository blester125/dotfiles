#!/usr/bin/python3

import argparse

def transform(name):
    prev_ = False
    result = []
    for i, char in enumerate(name):
        if i == 0:
            result.append(char.upper())
        elif prev_:
            prev_ = False
            result.append(char.upper())
        elif char == "_":
            prev_ = True
            result.append(" ")
        else:
            result.append(char)
    return ''.join(result)

def main():
    parser = argparse.ArgumentParser()
    parser.add_argument("name")
    args = parser.parse_args()
    print(transform(args.name))

if __name__ == "__main__":
    main()
